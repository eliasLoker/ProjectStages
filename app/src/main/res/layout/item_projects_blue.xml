<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@drawable/shape_rectangle">

    <ImageView
        android:id="@+id/folder_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_file_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/completed_image_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_completed"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/folder_image_view"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/completed_size_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#00bd06"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/completed_image_view"
        app:layout_constraintTop_toTopOf="@id/completed_image_view"
        app:layout_constraintBottom_toBottomOf="@id/completed_image_view"
        tools:text="12"/>

    <ImageView
        android:id="@+id/progress_image_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_progress"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/completed_image_view"
        app:layout_constraintEnd_toEndOf="@id/completed_image_view" />

    <TextView
        android:id="@+id/progress_size_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#ff0000"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/progress_image_view"
        app:layout_constraintTop_toTopOf="@id/progress_image_view"
        app:layout_constraintBottom_toBottomOf="@id/progress_image_view"
        tools:text="13"/>

    <ImageView
        android:id="@+id/thought_image_view"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_thought"
        app:layout_constraintEnd_toEndOf="@id/progress_image_view"
        app:layout_constraintTop_toBottomOf="@id/progress_image_view"/>

    <TextView
        android:id="@+id/thought_size_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#ffe700"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/thought_image_view"
        app:layout_constraintTop_toTopOf="@id/thought_image_view"
        app:layout_constraintBottom_toBottomOf="@id/thought_image_view"
        tools:text="14"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/vertical_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="completed_size_text_view,
        progress_size_text_view, thought_size_text_view"/>

    <TextView
        android:id="@+id/project_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/folder_image_view"
        app:layout_constraintEnd_toStartOf="@id/vertical_barrier"
        tools:text = "Проект \n dsfsd \n sdfdsf"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/folder_name_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="folder_image_view,
        project_name_text_view, thought_image_view"
        app:barrierDirection="bottom"/>

    <ImageView
        android:id="@+id/update_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_refresh_black"
        app:layout_constraintTop_toBottomOf="@id/folder_name_barrier"
        app:layout_constraintStart_toStartOf="@id/folder_image_view"
        app:layout_constraintEnd_toEndOf="@id/folder_image_view"/>

    <TextView
        android:id="@+id/update_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/project_name_text_view"
        app:layout_constraintEnd_toEndOf="@id/project_name_text_view"
        app:layout_constraintTop_toTopOf="@id/update_image_view"
        app:layout_constraintBottom_toBottomOf="@id/update_image_view"
        tools:text="33.13.2013"/>

</androidx.constraintlayout.widget.ConstraintLayout>