<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/pale_green"
    android:focusable="true"
    android:clickable="true"
    android:foreground="@drawable/ripple_custom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/vertical_view"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@color/green_completed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/task_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Привет. Это плэйсхолдер для заметки бла бла бла бла бла бла"/>

    <TextView
        android:id="@+id/updated_date_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/silver_color"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/task_text_view"
        app:layout_constraintEnd_toEndOf="@id/task_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="24.02.2021 12:17"/>

<!--    <View
        android:id="@+id/horizontal_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/green_completed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/task_text_view"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>